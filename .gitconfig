[user]
  name = jarra
  email = suhrawardi@gmail.com

[alias]
  ci = commit
  co = checkout
  st = status
  ctags = !.git/hooks/ctags

[apply]
  whitespace = strip

[diff]
  color = auto

[status]
  color = auto

[github]
  user = suhrawardi

[core]
  editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = true

[push]
  default = current

[pull]
  default = current
  rebase = true

[init]
  templatedir = ~/.git_template
